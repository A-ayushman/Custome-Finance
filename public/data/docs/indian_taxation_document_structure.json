        {
          "income_range": "2,50,001 - 5,00,000",
          "tax_rate": "5%"
        },
        {
          "income_range": "5,00,001 - 10,00,000",
          "tax_rate": "20%"
        },
        {
          "income_range": "Above 10,00,000",
          "tax_rate": "30%"
        }
      ]
    }
  },
