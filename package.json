{
  "name": "odic-finance-complete",
  "version": "1.0.0",
  "description": "ODIC Finance System - Production Package",
  "main": "workers-site/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler pages dev public",
    "deploy:pages": "wrangler pages deploy public --branch main",
    "deploy:worker": "wrangler deploy --config wrangler-worker.toml --env production",
    "db:create": "wrangler d1 create odic-finance-prod",
    "db:migrate": "wrangler d1 migrations apply odic-finance-prod --remote",
    "db:seed": "wrangler d1 execute odic-finance-prod --remote --file=./migrations/0002_seed_data.sql"
  },
  "dependencies": {
    "hono": "^3.12.0"
  },
  "devDependencies": {
    "wrangler": "^4.37.1"
  },
  "author": "ODIC International",
  "license": "MIT"
}
